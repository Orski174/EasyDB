('Plastic', 20.00, 'kg'),
('Glass', 25.00, 'kg'),
('Wood', 15.00, 'kg'),
('Rubber', 10.00, 'kg'),
('Concrete', 5.00, 'kg'),
('Brass', 60.00, 'kg'),
('Iron', 40.00, 'kg');