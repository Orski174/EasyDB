SELECT 
    pt.product_name, 
    p.supplier_name, 
    SUM(pt.total_Revenue) AS total_sales
FROM 
    Product_Trans pt
JOIN 
    Product p ON pt.product_name = p.product_name
WHERE 
    pt.transaction_date >= CURRENT_DATE - INTERVAL '6 months'
GROUP BY 
    pt.product_name, p.supplier_name
ORDER BY 
    total_sales DESC
LIMIT 3;